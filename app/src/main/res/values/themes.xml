<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Iqtimer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_blue_900</item>
        <item name="colorPrimaryVariant">@color/brand_blue_200</item>
        <item name="colorOnPrimary">@color/brand_blue_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_orange</item>
        <item name="colorSecondaryVariant">@color/brand_blue_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/brand_blue_900</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/brand_orange</item>
        <item name="colorControlHighlight">@color/brand_orange</item>
        <item name="background">@drawable/bg_text_input</item>
        <item name="startIconTint">@color/brand_orange</item>
    </style>

</resources>