<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/set_category_timer">

        <EditTextPreference
            app:title="@string/time_duration"
            app:key="DEFAULT_Time"
            app:defaultValue="50"
            app:summary="@string/by_default"/>

        <EditTextPreference
            app:title="@string/break_duration"
            app:key="DEFAULT_Break"
            app:summary="@string/by_default"
            app:defaultValue="15" />

        <EditTextPreference
            app:title="@string/plan_day"
            app:key="DEFAULT_Plan"
            app:summary="@string/by_default"
            app:defaultValue="8" />

    </PreferenceCategory>
</PreferenceScreen>